<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewTeamName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Team Name" />

    <TextView
        android:id="@+id/textViewPlayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTeamName"
        app:layout_constraintStart_toEndOf="@+id/textViewTeamName"
        app:layout_constraintTop_toTopOf="@+id/textViewTeamName"
        tools:text="38" />

    <TextView
        android:id="@+id/textViewGoalsFor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPlayed"
        app:layout_constraintStart_toEndOf="@+id/textViewPlayed"
        app:layout_constraintTop_toTopOf="@+id/textViewPlayed"
        tools:text="151" />

    <TextView
        android:id="@+id/textViewGoalsAgainst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGoalsFor"
        app:layout_constraintStart_toEndOf="@+id/textViewGoalsFor"
        app:layout_constraintTop_toTopOf="@+id/textViewGoalsFor"
        tools:text="38" />

    <TextView
        android:id="@+id/textViewGoalsDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGoalsAgainst"
        app:layout_constraintStart_toEndOf="@+id/textViewGoalsAgainst"
        app:layout_constraintTop_toTopOf="@+id/textViewGoalsAgainst"
        tools:text="113" />

    <TextView
        android:id="@+id/textViewWin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGoalsDifference"
        app:layout_constraintStart_toEndOf="@+id/textViewGoalsDifference"
        app:layout_constraintTop_toTopOf="@+id/textViewGoalsDifference"
        tools:text="32" />

    <TextView
        android:id="@+id/textViewDraw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewWin"
        app:layout_constraintStart_toEndOf="@+id/textViewWin"
        app:layout_constraintTop_toTopOf="@+id/textViewWin"
        tools:text="2" />

    <TextView
        android:id="@+id/textViewLoss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDraw"
        app:layout_constraintStart_toEndOf="@+id/textViewDraw"
        app:layout_constraintTop_toTopOf="@+id/textViewDraw"
        tools:text="4" />

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLoss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewLoss"
        app:layout_constraintTop_toTopOf="@+id/textViewLoss"
        tools:text="98" />
</androidx.constraintlayout.widget.ConstraintLayout>